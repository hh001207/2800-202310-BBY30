<%- include("templates/header") %>

<head>
    <title>Profile</title>
    <!-- Meta tags -->
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Load styles here -->
    <link rel="stylesheet" href="./public/styles/skeleton.css" />
    <link rel="stylesheet" href="./public/styles/skeleton.css" />
